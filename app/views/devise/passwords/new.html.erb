<h2 class="text-center">Forgot your password?</h2>

<div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2 ">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  <%= f.label :email, 'Email', class: "control-label" %><br />
  <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>

  <%= f.submit "Send me reset password instructions", class: "btn btn-primary center-block" %>
<% end %>

<%= render "devise/shared/links" %>

</div>
