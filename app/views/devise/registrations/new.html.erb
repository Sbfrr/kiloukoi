<h2 class="text-center">Create an acount</h2>

<div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2 ">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
    <%= f.label :firstname, 'Firstname', class: "control-label" %><br />
    <%= f.text_field :firstname, class: "form-control", placeholder: "Firstname", autofocus: true %>
    </div>

    <div class="form-group">
    <%= f.label :lastname, 'Lastname', class: "control-label" %><br/>
    <%= f.text_field :lastname, class: "form-control", placeholder: "Lastname" %>
    </div>

    <div class="form-group">
    <%= f.label :birthdate, 'Birthdate', class: "control-label" %><br/>
    <%= f.date_field :birthdate, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :email, 'Email', class: "control-label" %><br />
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="form-group">
    <%= f.label :password, 'Password', class: "control-label" %><br />
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary " %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>