<h2 class="text-center">login</h2>

<div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2 ">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
  <%= f.label :email, 'Email', class: "control-label" %><br/>
  <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>

  <div class="form-group">
  <%= f.label :password, 'Password', class: "control-label" %><br />
  <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>

    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= f.submit "Submit", class: "btn btn-primary " %>

<% end %>

<%= render "devise/shared/links" %>

</div>
