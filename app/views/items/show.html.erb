<div class="row">
  <div class="col-md-4">
    <h2><%= @item.title %></h2>
  </div>

  <div class="col-md-4 pull-right">
    <h2>Owner</h2>
  </div>

</div>


<div class="row">
  <div class="col-md-4">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner" id="fix_width">
        <% @item.pictures.each_with_index do |picture, index| %>
          <div class="item <%= index == 0 ? 'active' : nil %> <%= "item#{index}"%>">
            <%= image_tag picture.file.url(:medium)%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-3 marg-bottom">
      <% @item.pictures.each_with_index do |picture, index| %>
        <%= image_tag picture.file.url(:thumb), class: "img-thumbnail margin-thumb trigger-#{index}", id: "nopadding" %>
      <% end %>
  </div>

  <script>
    $(function(){
      $(".trigger-0").click(function(){
        $(".active").removeClass("active");
        $(".item0").addClass("active");
      });
      $(".trigger-1").click(function(){
        $(".active").removeClass("active");
        $(".item1").addClass("active");
      });
      $(".trigger-2").click(function(){
        $(".active").removeClass("active");
        $(".item2").addClass("active");
      });
      $(".trigger-3").click(function(){
        $(".active").removeClass("active");
        $(".item3").addClass("active");
      });
    })
  </script>

  <div class="col-md-4 pull-right">
    <p><%= current_user.firstname.capitalize %> <%= current_user.lastname.capitalize %></p>
    <p><%= 'From '%> <%= current_user.city %><p>
  </div>

</div>

<div class="row">

  <div class="col-md-4">
    <h2>Description</h2>
    <p><%= @item.description %><p>
  </div>


  <div class="col-md-4 pull-right">
    <section class="booking">
      <h2>Booking</h2>
      <%= render 'bookings/form', {item_id: params[:id]} %>
    </section>
  </div>

</div>





