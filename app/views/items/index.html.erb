<div class="carte">
    <%= image_tag("carte.png")%>
</div>

<div class="flux">
  <div class="col-md-8 col-md-offset-2">
    <form class="navbar-form navbar-left thumbnail" role="location">
      <div class="form-group">
        <label for="location"> Entrez une localisation : </label>
        <input type="text" class="form-control" placeholder="Localisation">
      </div>
      <button type="submit" class="btn btn-default">Je valide</button>
    </form>
  </div>
<% @items.each do |item| %>
  <div class="col-sm-6 col-md-6">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= link_to item.title, item_path(item) %></h3>
        <p><%= link_to item.description, item_path(item) %></p>
        <p>
          <button class="btn btn-default"> <%= link_to "Supprimer", item_path(item), method: "delete", confirm: "Tu es sûr ?" %></button>
          <button class="btn btn-default"> <%= link_to "Mettre à jour", edit_item_path(item) %></button>
        </p>
      </div>
    </div>
  </div>
<% end %>



