<%= form_for @item, :html => { :class => 'form-horizontal', multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Titre', class: "control-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Titre" %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Description', class: "control-label" %>
    <%= form.text_field :description, class: "form-control", placeholder: "Description" %>
  </div>

  <div class="form-group">
    <%= form.label :price, 'Prix', class: "control-label" %>
    <%= form.text_field :price, class: "form-control", placeholder: "Prix" %>
  </div>

  <div class="form-group">
    <%= form.label :location, 'Localisation', class: "control-label" %>
    <%= form.text_field :location, class: "form-control", placeholder: "Localisation" %>
  </div>

  <div class="field">
    <%= form.label :pictures, 'Pictures', class: "control-label" %><br>
    <%= file_field_tag "photos[]", type: :file, multiple: true %>
  </div>

  <%= form.submit "Valider", class: "btn btn-primary" %>

<% end %>