<%= form_for @item, :html => { :multipart => true}, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Titre', class: "control-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Titre" %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Description', class: "control-label" %>
    <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
  </div>
  <div class="form-group">
    <%= f.label :price, 'Prix', class: "control-label" %>
    <%= f.text_field :price, class: "form-control", placeholder: "Prix" %>
  </div>

  <div class="form-group">
    <%= f.label :location, 'localisation', class: "control-label" %>
    <%= f.text_field :location, class: "form-control", placeholder: "Localisation" %>
  </div>

  <div id='picture-container'>
   <%= render partial: 'pictures' %>
  </div>

  <%= f.submit "Valider", class: "btn btn-primary" %>

<% end %>