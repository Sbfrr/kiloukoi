<div class="row">
  <h1 class="text-center">Your Profil</h1>
</div>

<div class="row">
  <h2 class="text-center"><%= current_user.firstname.capitalize %> <%= current_user.lastname.capitalize %></h2>
</div>

<div class="row">
  <div class="text-center">

    <div class="form-group">
      <%= 'Your address :' %><br/>
      <%= current_user.address %><br/>
      <%= current_user.zipcode %><%= ' ' %><%= current_user.city %><br/>
    </div>

    <div class="form-group">
      <%= 'You were born on '%> <%= current_user.birthdate %>
    </div>

    <%= link_to edit_profile_path do %>
      <button class="btn btn-primary">Edit profile</button>
    <% end %>

  </div>
</div>

<section class="booking text-center">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <td>Arrival</td>
          <td>Departure</td>
          <td>Item</td>
          <td>Total price</td>
        </tr>
      </thead>
      <tbody>
      <% current_user.bookings.each do |booking| %>
        <tr>
         <td><%= booking.arrival %></td>
         <td><%= booking.departure %></td>
         <td><%= booking.item.title %></td>
         <%= abc %>
         <td><%= booking.price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>